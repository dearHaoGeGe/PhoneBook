<?xml version="1.0" encoding="utf-8"?>
<com.my.custom.SlidingMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_RelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_message_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是发送短信人" />

            <TextView
                android:id="@+id/item_message_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_message_tv_name"
                android:text="这是短信内容" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_LinearLayout"
            android:background="@color/colorPrimary"
            android:text="菜单"

            />
    </RelativeLayout>


</com.my.custom.SlidingMenuView>
